<% if attending? %>

  <h2>My Guests & I</h2>

    <ul>
      <% current_user.guests.each do |guest| %>
      <li><strong><%= guest.first_name %> <%= guest.last_name %></strong>: <%= guest.meal.menu_item %>
        <% if !guest.meal.notes.empty? %>
          (<%= guest.meal.notes %>)
        <% end %>
      </li>
      <% end %>
    </ul>

    <br>

<% else %>
  <center><h3>We're sad you can't make it.</h3></center>
  <br>
<% end %>

<center>
  <a href='/users/<%= session_slug %>/edit'><button type="button"> Edit my RSVP </button></a>
  <% if current_user.guests.count > 1 %>
    <a href='/guests/edit'><button type="button"> Edit my Guests </button></a>
  <% end %>
  <% if current_user.guests.count < current_user.guest_limit && attending? %>
    <a href='/guests/new'><button type="button"> Add a 'Plus One' </button></a>
  <% end %>
</center>
